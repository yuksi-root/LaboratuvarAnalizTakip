                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:text="Durum"
                android:textAlignment="center"
                android:gravity="center|top|bottom|left|right">
            </TextView>


        </LinearLayout>

    </LinearLayout>
