<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.KullaniciAnasayfa">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0"
        android:text="XXXX Tıbbi Tanı ve Arastırma Laboratuvarı"
        android:textAlignment="center" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/giris">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="XXXX FİRMASI"
        android:gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:textAlignment="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/testGiris_k"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="testGiris_k"
            android:text="Yeni Kayıt" />

        <Button
            android:id="@+id/hasta_arama_k"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="hasta_arama_k"
            android:text="Kayıt Arama" />

        <Button
            android:id="@+id/exitBtn_k"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Çıkış"
            android:onClick="exitBtn_k"/>

    </LinearLayout>

</LinearLayout>