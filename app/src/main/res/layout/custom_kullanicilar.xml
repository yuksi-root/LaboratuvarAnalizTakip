<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_txt_ktc"
            android:layout_width="35dp"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="id"
            android:textAlignment="center"
            android:gravity="center"
           >
        </TextView>
        <TextView
            android:id="@+id/kAdi_txt_ktc"
            android:layout_width="80dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Kullanici adi"
            android:textAlignment="center"
            android:gravity="center"
            >
        </TextView>
        <TextView
            android:id="@+id/sifre_txt_ktc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="2dp"
            android:text="Yetkili Kişi"
            android:textAlignment="center"
            android:gravity="center"
            >
        </TextView>
        <TextView
            android:id="@+id/firma_txt_ktc"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="2dp"
            android:text="Firma Adı"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/yetki_txt_ktc"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="2dp"
            android:text="Yetki"
            android:textAlignment="center"
            android:gravity="center|top|bottom|left|right">
        </TextView>


    </LinearLayout>
</LinearLayout>
