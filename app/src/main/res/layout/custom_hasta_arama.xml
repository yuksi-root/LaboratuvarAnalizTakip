<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_txt_alist"
            android:layout_width="15dp"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="id"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/tarih_txt_alist"
            android:layout_width="70dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Tarih"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/takipNo_txt_alist"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="7dp"
            android:text="TakipNo"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/hastaAd_txt_alist"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="5dp"
            android:text="Hasta AdÄ±"
            android:textAlignment="center"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/durum_txt_alist"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginStart="5dp"
            android:text="Durum"
            android:textAlignment="center"
            android:gravity="center|top|bottom|left|right">
        </TextView>


    </LinearLayout>
</LinearLayout>
