<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.KullanicilarList"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_txt_kt"
            android:layout_width="35dp"
            android:layout_marginStart="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="id"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/holo_orange_light">
        </TextView>
        <TextView
            android:id="@+id/kAdi_txt_kt"
            android:layout_width="80dp"
            android:layout_marginStart="2dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Kullanici adi"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/holo_orange_light">
        </TextView>
        <TextView
            android:id="@+id/sifre_txt_kt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginStart="2dp"
            android:text="Yetkili Adi"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/holo_orange_light">
        </TextView>
        <TextView
            android:id="@+id/firma_txt_kt"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginStart="2dp"
            android:text="Firma Adı"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/holo_orange_light">
        </TextView>
        <TextView
            android:id="@+id/yetki_txt"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginStart="2dp"
            android:text="Yetki"
            android:textAlignment="center"
            android:gravity="center|top|bottom|left|right"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/holo_orange_light">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="Geri"
                android:layout_marginStart="2dp"
                android:textAllCaps="false"
                >

            </Button>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="-10dp"
                android:text="Sıralama Türü">

            </TextView>
            <Spinner
                android:id="@+id/sira_spin_kt"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="22dp"
                android:textSize="2dp"
                android:layout_marginStart="-120dp"
                android:spinnerMode="dropdown"
                >

            </Spinner>
            <Button
                android:id="@+id/duzenBtn_kt"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Duzenle"
                android:onClick="duzenle_kt"
                android:textSize="12dp"
                android:layout_marginStart="7dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/silBtn_kt"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:onClick="sil_kt"
                android:layout_marginStart="7dp"
                android:text="Sil"
                android:textSize="12dp"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/kt_List"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
